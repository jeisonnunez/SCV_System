<local:Converter x:Class="Vista.TablaBalance"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vista"
        mc:Ignorable="d"
        Title="Tabla Balance" Height="506.466" Width="1120.603" WindowStartupLocation="CenterScreen" Closing="Window_Closing" Loaded="Converter_Loaded">


    <ScrollViewer  Margin="0,0,0.333,0" VerticalAlignment="Top" Height="auto"  >
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Height="543" Width="1162"  >
            <DataGrid x:Name="dgBalance" Width="902" Padding="0" Margin="116,0,144,145.667"   BorderThickness="1"  BorderBrush="LightGray" HorizontalAlignment="Center" AutoGenerateColumns="False"  AutoGeneratedColumns="dgBalance_AutoGeneratedColumns" CanUserDeleteRows="False" CanUserSortColumns="False" SelectionMode="Extended"   VerticalContentAlignment="Center" GridLinesVisibility="Vertical" VerticalGridLinesBrush="Gray" CanUserAddRows="False" SelectionUnit="FullRow" Background="#FFE5E5E5" FontWeight="Bold" FontSize="12"  Foreground="Black" Height="335" VerticalAlignment="Bottom" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >


                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver"
                 Value="True">
                                <Setter Property="Background"
                     Value="#FF2196F3" />
                                <Setter Property="Foreground"
                     Value="White" />
                            </Trigger>
                        </Style.Triggers>
                        <Setter Property="Height" Value="32"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="TextBox.IsReadOnly" Value="True"></Setter>
                        <Setter Property="TextBox.TextAlignment" Value="Right"></Setter>

                        <Setter Property="Background" Value="White"/>
                        <Setter Property="Foreground" Value="Black"/>


                        <Style.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent" />
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black" />
                        </Style.Resources>

                    </Style>

                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="auto" Header="Nombre" x:Name="nombre" >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0"  Text="{Binding Path=Name,UpdateSourceTrigger=PropertyChanged}" Name="txtNombre" TextAlignment="Center" ></TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <DataGridTextColumn Width="auto" Header="Debito (ML)"  x:Name="debit" Visibility="Hidden" Binding="{Binding Path=Debit,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"></DataGridTextColumn>
                    <DataGridTextColumn Width="auto" Header="Credito (ML)"  x:Name="credit" Visibility="Hidden" Binding="{Binding Path=Credit,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"></DataGridTextColumn>
                    <DataGridTextColumn Width="auto" Header="Saldo (ML)"  x:Name="saldo" Visibility="Hidden" Binding="{Binding Path=Saldo,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"></DataGridTextColumn>
                    <DataGridTextColumn Width="auto" Header="Debito (ME)" Visibility="Hidden"  x:Name="FCDebit" Binding="{Binding Path=FCDebit,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"></DataGridTextColumn>
                    <DataGridTextColumn Width="auto" Header="Credito (ME)" Visibility="Hidden"  x:Name="FCCredit" Binding="{Binding Path=FCCredit,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"></DataGridTextColumn>
                    <DataGridTextColumn Width="auto" Header="Saldo (ME)" Visibility="Hidden" x:Name="FCSaldo" Binding="{Binding Path=FCSaldo,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"></DataGridTextColumn>
                    <DataGridTextColumn Width="auto" Header="Debito (MS)"  x:Name="SYSDeb" Visibility="Hidden" Binding="{Binding Path=SYSDeb,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"></DataGridTextColumn>
                    <DataGridTextColumn Width="auto" Header="Credito (MS)"  x:Name="SYSCred" Visibility="Hidden" Binding="{Binding Path=SYSCred,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"></DataGridTextColumn>
                    <DataGridTextColumn Width="auto" Header="Saldo (MS)"  x:Name="SYSSaldo" Visibility="Hidden" Binding="{Binding Path=SaldoSYS,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <!--<WrapPanel x:Name="wrapColumns" Margin="0,67,0,412.667" Visibility="Hidden"/>-->
            <TextBlock x:Name="lblDeFecha" HorizontalAlignment="Left" Margin="115,27,0,0" TextWrapping="Wrap" Text="De Fecha" FontWeight="Bold" FontSize="14" VerticalAlignment="Top"/>
            <TextBlock x:Name="lblHastaFecha" HorizontalAlignment="Left" Margin="385,28,0,0" TextWrapping="Wrap" Text="Hasta" FontWeight="Bold" FontSize="14" VerticalAlignment="Top"/>

            <Button x:Name="btnOk" Click="btnOk_Click" Content="OK" HorizontalAlignment="Left" Margin="116,428,0,0" VerticalAlignment="Top" Width="100"/>
            <DatePicker  Name="dpFechaHasta" HorizontalAlignment="Left" Margin="444,24,0,0" VerticalAlignment="Top" Width="121" Height="25" >
                <DatePicker.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3"/>

                    </Style>
                </DatePicker.Resources>
            </DatePicker>
            <DatePicker  Name="dpFechaDesde" HorizontalAlignment="Left" Margin="193,24,0,0" VerticalAlignment="Top" Width="121" Height="25" >
                <DatePicker.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="3"/>

                    </Style>
                </DatePicker.Resources>
            </DatePicker>
            <Image PreviewMouseLeftButtonDown="imgExcel_PreviewMouseLeftButtonDown" Source="excel.png"   x:Name="imgExcel" Cursor="Hand" Visibility="Visible" RenderTransformOrigin="1.591,0.437" Width="40" Margin="980,20,142,490" />


        </Grid>
    </ScrollViewer>
</local:Converter>
